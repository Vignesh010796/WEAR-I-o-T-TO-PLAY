/*
Connect the 1st accelerometer to the upper arm & 2nd one to the lower arm
The circuit:
 analog 0: z1-axis
 analog 1: y1-axis
 analog 2: x1-axis
 analog 3: z2-axis
 analog 4: y2-axis
 analog 5: x2-axis


*/

// these constants describe the pins. They won't change:
const int groundpin = 18;             // analog input pin 4 -- ground
const int powerpin = 19;              // analog input pin 5 -- voltage
const int x1pin = A2;                  // x-axis of the accelerometer
const int y1pin = A1;                  // y-axis
const int z1pin = A0;                  // z-axis (only on 3-axis models)
const int x1pin = A5;                  // x-axis of the accelerometer
const int y1pin = A4;                  // y-axis
const int z1pin = A3;                  // z-axis (only on 3-axis models)

void setup() {
  // initialize the serial communications:
  Serial.begin(9600);

  // Provide ground and power by using the analog inputs as normal
  // digital pins.  This makes it possible to directly connect the
  // breakout board to the Arduino.  If you use the normal 5V and
  // GND pins on the Arduino, you can remove these lines.
  pinMode(groundpin, OUTPUT);
  pinMode(powerpin, OUTPUT);
  digitalWrite(groundpin, LOW);
  digitalWrite(powerpin, HIGH);
}

void loop() {
  // print the sensor values:
  Serial.print(analogRead(x1pin));
  // print a tab between values:
  Serial.print("\t");
  Serial.print(analogRead(y1pin));
  Serial.print(analogRead(z1pin));
  Serial.print(analogRead(x2pin));
  Serial.print(analogRead(y2pin));
  Serial.print(analogRead(z2pin));
  Serial.println();
  
// delay before next reading:
  delay(100);
}
